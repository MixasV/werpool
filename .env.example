# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@localhost:5432/flow
POSTGRES_DB=forte
POSTGRES_USER=forte_user
POSTGRES_PASSWORD=CHANGE_ME

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Flow Blockchain Configuration
FLOW_NETWORK=testnet
FLOW_ACCESS_NODE=https://access.devnet.nodes.onflow.org:9000

# Flow Account Keys (for backend signing)
# Generate new keys for production!
FLOW_TRANSACTION_SIGNER=YOUR_FLOW_ADDRESS_HERE
FLOW_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE

# API Configuration
API_PORT=3001
API_BASE_URL=http://localhost:3001
API_ACCESS_TOKEN=YOUR_API_ACCESS_TOKEN_HERE

# Flow Session Configuration
FLOW_SESSION_COOKIE=flow_session
FLOW_CHALLENGE_TTL_MS=600000
FLOW_SESSION_TTL_MS=86400000

# Next.js Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_FLOW_SESSION_COOKIE=flow_session
NEXT_PUBLIC_FLOW_NETWORK=testnet

# Security
JWT_SECRET=YOUR_JWT_SECRET_HERE
API_TOKEN=YOUR_API_TOKEN_HERE
RATE_LIMIT_TTL_MS=60000
RATE_LIMIT_LIMIT=120

# Monitoring (optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME

# Optional: Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn_here
