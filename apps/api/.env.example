# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/werpool?schema=public"

# Flow Blockchain
FLOW_NETWORK=testnet
FLOW_DEPLOYER_ADDRESS=0x1234567890abcdef
FLOW_DEPLOYER_PRIVATE_KEY=your-private-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_TTL_MS=60000
RATE_LIMIT_LIMIT=120

# API Access (optional)
API_ACCESS_TOKEN=

# Flow Authentication
FLOW_CHALLENGE_TTL_MS=600000
FLOW_SESSION_TTL_MS=86400000
FLOW_SESSION_COOKIE=flow_session

# Oracles
CRYPTO_ORACLE_SIGNING_KEY=your-signing-key

# Automation
AISPORTS_MARKET_AUTOMATION_ENABLED=true
CRYPTO_MARKET_AUTOMATION_ENABLED=true
SPORTS_MARKET_AUTOMATION_ENABLED=true

# Monitoring
ALERT_WEBHOOK_URL=

# Find Labs API
FIND_LABS_API_URL=https://api.find.xyz
