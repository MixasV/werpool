NODE_ENV=development

# API endpoints
NEXT_PUBLIC_API_BASE_URL=http://localhost:3333
NEXT_PUBLIC_WS_BASE_URL=http://localhost:3333
API_BASE_URL=http://localhost:3333

# Auth tokens (fallback for automation/tests only)
NEXT_PUBLIC_API_TOKEN=replace-with-api-token
API_ACCESS_TOKEN=replace-with-api-token

# Flow session & wallet configuration
NEXT_PUBLIC_FLOW_NETWORK=testnet
NEXT_PUBLIC_FLOW_SESSION_COOKIE=flow_session
NEXT_PUBLIC_FLOW_ACCESS_NODE=https://access.devnet.nodes.onflow.org:9000
NEXT_PUBLIC_FLOW_WALLET_URL=https://fcl-discovery.onflow.org/testnet/authn
NEXT_PUBLIC_FLOW_AUTHN_URL=https://fcl-discovery.onflow.org/testnet/authn
NEXT_PUBLIC_FLOW_WALLET_METHOD=IFRAME
NEXT_PUBLIC_FLOW_APP_TITLE=Forte Prediction Markets
NEXT_PUBLIC_FLOW_APP_ICON=
NEXT_PUBLIC_FLOW_CORE_MARKET_HUB_ADDRESS=0xcoremarkethub
NEXT_PUBLIC_FLOW_LMSR_AMM_ADDRESS=0xlmsramm
NEXT_PUBLIC_FLOW_OUTCOME_TOKEN_ADDRESS=0xoutcometoken

# Roles strategy overrides (optional)
NEXT_PUBLIC_FLOW_ROLES_STRATEGY=legacy
NEXT_PUBLIC_FORCE_LEGACY_ROLES=false

# Developer tooling
NEXT_DEV_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
NEXT_CORS_ORIGIN=http://localhost:3000
NEXT_CORS_METHODS=GET,POST,PATCH,PUT,DELETE,OPTIONS
NEXT_CORS_HEADERS=X-Requested-With,Content-Type,Authorization,x-api-token

# End-to-end testing helpers
E2E_WEB_PORT=3200
MOCK_API_PORT=4100
E2E_BASE_URL=http://127.0.0.1:3200
NEXT_E2E_DISABLE_CACHE=false
